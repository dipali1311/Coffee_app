<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="#FFCC00"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="107dp"
                    android:layout_height="114dp"
                    android:src="@drawable/starbucks" />

                <TextView
                    android:layout_width="258dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Caffeine Enterprise"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="1. caffe latte   "
                        android:textAllCaps="true"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Price - Rs. 250/cup"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="quantity"
                        android:textAllCaps="true"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints"
                        tools:textcontent="MainActivity">

                        <Button
                            android:id="@+id/minus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:onClick="decrement1"
                            android:text="-"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/quantity_text_view1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="0" />

                        <Button
                            android:id="@+id/plus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:onClick="increment1"
                            android:text="+"
                            android:textColor="@android:color/black" />

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="107dp"
                    android:layout_height="114dp"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/caffelatte" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="2. Espresso\t\t\t"
                        android:textAllCaps="true"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Price - Rs. 200/cup"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/quantity1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="quantity"
                        android:textAllCaps="true"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints"
                        tools:textcontent="MainActivity">

                        <Button
                            android:id="@+id/minus1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:onClick="decrement2"
                            android:text="-"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/quantity_text_view2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="0" />

                        <Button
                            android:id="@+id/plus1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:onClick="increment2"
                            android:text="+"
                            android:textColor="@android:color/black" />

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="107dp"
                    android:layout_height="114dp"
                    android:layout_gravity="right"
                    android:src="@drawable/espresso" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="3. macchiato     "
                        android:textAllCaps="true"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Price - Rs. 150/cup"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/quantity2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="quantity"
                        android:textAllCaps="true"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        tools:ignore="MissingConstraints"
                        tools:textcontent="MainActivity">

                        <Button
                            android:id="@+id/minus2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:onClick="decrement3"
                            android:text="-"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/quantity_text_view3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="0" />

                        <Button
                            android:id="@+id/plus2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:onClick="increment3"
                            android:text="+"
                            android:textColor="@android:color/black" />

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="107dp"
                    android:layout_height="114dp"
                    android:layout_gravity="right"

                    android:src="@drawable/macchiato" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/order"
                    android:layout_width="70dp"
                    android:layout_height="48dp"
                    android:onClick="submitOrder"
                    android:text="ORDER"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints"
                    tools:textcontent="MainActivity">

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Amount to be paid: "
                        android:textAllCaps="true"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/price_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="0"
                        android:textSize="20dp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/thankyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Thank you!"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>